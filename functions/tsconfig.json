    "target": "es2017",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": ["reflect-metadata"],
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}